<% content_for :banner_title do %>
<%= fa_icon 'phone lg' %>&nbsp;Contacts <% unless current_user.admin %><span><%= @contacts.count %></span><% end %>
<% end %>

<div id="table">
  <table id="contacts">
    <thead>
      <tr>
        <th></th>
        <th>Handle</th>
        <th>Name</th>
        <th>Organization</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <td></td>
        <td><%= link_to contact.handle, contact_url(contact.handle) %></td>
        <td><%= contact.name %></td>
        <td><%= contact.organization %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
