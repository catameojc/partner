<%= flash[:message] %>

<div class="row">
	<div class="col-sm-6">
		<%= form_tag partner_otc_path(params[:partner_id]), :class => 'form-horizontal', :id => 'p-otc' do %>
		<div class="form-group">
			<%= label_tag(:q, "Amount:", class: 'col-sm-2 control-label') %> 
			<div class="col-sm-10">
				<%= text_field :order, :amount, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
			<%= label_tag(:q, "Remarks:", class: 'col-sm-2 control-label') %> 
			<div class="col-sm-10">
				<%= text_field :order, :remarks, class: 'form-control' %>
			</div>
		</div>
		<div class="text-right">
			<%= submit_tag "Submit", class: "btn btn-primary" %>
		</div>

		<% end %>
	</div>
</div>  


