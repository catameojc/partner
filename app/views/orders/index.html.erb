<% content_for :banner_title do %>
<%= fa_icon 'file-text lg' %>&nbsp;Orders
<% end %>

<div id="table">
  <table id="orders">
    <thead>
      <tr>
        <th>Date</th>
        <th>Order No.</th>
        <th>Partner</th>
        <th>Type</th>
        <th>Term</th>
        <th>Domain</th>
        <th>Status</th>
        <th>Amount ($)</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <% order.order_details.each do |order_detail| %>
      <tr>
        <td><%= formatted_timestamp order.ordered_at %></td>
        <td><%= order.order_number %></td>
        <td><%= link_to order.partner.name, partner_url(order.partner.id) %></td>
        <td><%= order_detail_type order_detail.type %></td>
        <td><%= order_detail.period %></td>
        <% if order.status == 'complete' %>
          <td><%= domain_for order_detail %></td>
        <% else %>
          <td><%= order_detail.object.name %></td>
        <% end %>
        <td><%= order.status %></td>
        <td><%= number_to_currency(order_detail.price) %></td>
      </tr>
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
